<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="600" minWidth="800" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.ifpi.bibliotecaif.AdicionarLivroController">
   <children>
      <GridPane layoutX="228.0" layoutY="30.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="50.0">
         <columnConstraints>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label alignment="CENTER" text="Adicionar livro">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
            <Group GridPane.rowIndex="1">
               <children>
                  <Label prefHeight="28.0" prefWidth="51.0" text="Título" />
                  <TextField fx:id="txtTitulo" layoutY="28.0" maxWidth="250.0" minWidth="250.0" prefWidth="250.0" />
                  <Label layoutY="53.0" prefHeight="28.0" prefWidth="51.0" text="Autor" />
                  <TextField fx:id="txtAutor" layoutY="81.0" maxWidth="250.0" minWidth="250.0" prefWidth="250.0" />
                  <Label layoutY="106.0" prefHeight="28.0" prefWidth="51.0" text="Editora" />
                  <TextField fx:id="txtEditora" layoutY="134.0" maxWidth="250.0" minWidth="250.0" prefWidth="250.0" />
                  <Label layoutY="159.0" prefHeight="28.0" prefWidth="51.0" text="ISBN" />
                  <TextField fx:id="txtISBN" layoutY="187.0" maxWidth="250.0" minWidth="250.0" prefHeight="25.0" prefWidth="250.0" />
                  <ComboBox fx:id="cbbGenero" layoutX="125.0" layoutY="325.0" prefHeight="0.0" prefWidth="127.0" promptText="GÊNERO" />
                  <ComboBox fx:id="cbbAssunto" layoutX="125.0" layoutY="362.0" prefHeight="0.0" prefWidth="127.0" promptText="ASSUNTO" />
                  <RadioButton fx:id="cbLiterario" layoutY="329.0" mnemonicParsing="false" onAction="#onRadioLiterarioChange" selected="true" text="Literário">
                     <toggleGroup>
                        <ToggleGroup fx:id="tipo" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="cbDidatico" layoutX="-1.0" layoutY="366.0" mnemonicParsing="false" onAction="#onRadioDidaticoChange" text="Didático" toggleGroup="$tipo" />
                  <ComboBox fx:id="cbbClassificacao" layoutX="-1.0" layoutY="240.0" prefHeight="25.0" prefWidth="85.0" promptText="LIVRE" />
                  <Label layoutX="2.0" layoutY="212.0" prefHeight="28.0" prefWidth="125.0" text="Classificação indicativa" />
               </children>
            </Group>
            <Button fx:id="adicionarButton" alignment="CENTER" mnemonicParsing="false" onAction="#onAdicionarButtonAction" prefHeight="36.0" prefWidth="127.0" text="Adicionar livro" textAlignment="CENTER" GridPane.rowIndex="2">
               <GridPane.margin>
                  <Insets top="30.0" />
               </GridPane.margin>
            </Button>
         </children>
      </GridPane>
   </children>
</AnchorPane>
